
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Events - Overview</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
		<header>
		<h1>Events Overview</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
		<p><a href="/">Home page</a></p>
    {{#if authorised}}
      <p><a href="/secure/add">Add a new event</a></p>
    {{/if}}
    <p>This is a secure page. Users need to have a valid account and be logged in to see it.</p>
    <table>
      <p id='message'></p>
      <tr><th>Photo</th><th>Title</th><th>Description</th><th>Date</th><th>Item1</th><th>Item2</th><th>Item3</th><th>Item4</th><th>Item5</th></tr>
        {{#each records}}
        <tr>
          <td><img src = "photos/{{this.photo}}" /></td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.date}}</td>
          {{#if this.item1name}}
          <td>{{this.item1name}}<br>${{this.item1price}}<br><a href={{this.item1link}}>Item Link</a></td>
          {{else}}
          <td>&nbsp;</td>
          {{/if}}
          {{#if this.item2name}}
          <td>{{this.item2name}}<br>${{this.item2price}}<br><a href={{this.item2link}}>Item Link</a></td>
          {{else}}
          <td>&nbsp;</td>
          {{/if}}
          {{#if this.item3name}}
          <td>{{this.item3name}}<br>${{this.item3price}}<br><a href={{this.item3link}}>Item Link</a></td>
          {{else}}
          <td>&nbsp;</td>
          {{/if}}
          {{#if this.item4name}}
          <td>{{this.item4name}}<br>${{this.item4price}}<br><a href={{this.item4link}}>Item Link</a></td>
          {{else}}
          <td>&nbsp;</td>
          {{/if}}
          {{#if this.item5name}}
          <td>{{this.item5name}}<br>${{this.item5price}}<br><a href={{this.item5link}}>Item Link</a></td>
          {{else}}
          <td>&nbsp;</td>
          {{/if}}
        </tr>
        {{/each}}
      </table>
		</main>
	</body>
</html>